{
  "name": "@codewithajoydas/toastmaster",
  "version": "3.0.0",
  "description": "A lightweight, customizable toast notification library for the web.",
  "main": "dist/toaster.min.js",
  "style": "dist/toaster.min.css",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "toast",
    "notification",
    "javascript",
    "ui",
    "alert",
    "codewithajoydas"
  ],
  "author": "Ajoy Das",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codewithajoydas/Toastmaster"
  },
  "scripts": {
    "build": "npm run minify:js && npm run minify:css",
    "minify:js": "terser src/index.js -o dist/toaster.min.js -c -m",
    "minify:css": "cleancss -o dist/toaster.min.css src/style.css"
  },
  "dependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.44.0"
  }
}
